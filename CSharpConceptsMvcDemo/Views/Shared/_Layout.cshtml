@{
    var title = ViewData["Title"] as string ?? "CSharp Concepts MVC Demo";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">C# Concepts</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/Methods">Methods</a>
                <a class="nav-link" href="/Constructors">Constructors</a>
                <a class="nav-link" href="/Parameters">Parameters</a>
            </div>
        </div>
    </nav>
    <main class="container">
        <div class="card shadow-sm">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </main>
    <footer class="text-center mt-4 mb-4 text-muted">
        <small>&copy; @(DateTime.Now.Year) CSharpConceptsMvcDemo</small>
    </footer>
</body>
</html>
